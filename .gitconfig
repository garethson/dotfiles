[user]
	name = Gareth du Plooy
	email = gduplooy@gmail.com
[mergetool]
  keepBackup = true

[hub]
  protocol = https

[credential]
  helper = osxkeychain

[core]
  editor = vim
	commitGraph = true
[alias]
  ci = commit
  co = checkout
  st = status
  br = branch
  amend = commit --amend --no-edit
  pfo = push --force origin
  rhh = reset HEAD --hard
  p = pull

[push]
  default = simple
[pull]
  rebase = true
[color]
  ui = true

[diff]
	algorithm = patience
[protocol]
	version = 2
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[pager]
	branch = false
[gc]
	writeCommitGraph = true
